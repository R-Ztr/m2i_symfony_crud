{% extends 'base.html.twig' %}

{% block title %}All Posts{% endblock %}

{% block body %}
    <h1 class="mb-4">All Posts</h1>

    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>ID</th>
                <th>Content</th>
                <th>Created At</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for post in posts %}
            <tr>
                <td>{{ post.id }}</td>
                <td>{{ post.content }}</td>
                <td>{{ post.createdAt|date('Y-m-d H:i') }}</td>
                <td>
                    <a href="{{ path('app_post_show', {'id': post.id}) }}" class="btn btn-sm btn-info">View</a>
                    <a href="{{ path('app_post_edit', {'id': post.id}) }}" class="btn btn-sm btn-warning">Edit</a>
                    {{ include('post/_delete_form.html.twig', { post: post }) }}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">No posts found.</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_post_new') }}" class="btn btn-success">Create New Post</a>
{% endblock %}
